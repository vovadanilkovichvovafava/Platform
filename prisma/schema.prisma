generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String
  name          String
  role          String    @default("STUDENT") // STUDENT, TEACHER, CO_ADMIN, ADMIN
  totalXP       Int       @default(0)
  currentStreak Int       @default(0)
  avatarUrl     String?
  invitedBy     String?   // ID of user who invited
  telegramChatId      String?   // Telegram chat ID for notifications
  telegramEnabled     Boolean   @default(true) // Allow user to disable TG notifications
  telegramConnectedAt DateTime? // When Telegram was linked
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  enrollments      Enrollment[]
  moduleProgress   ModuleProgress[]
  unitProgress     UnitProgress[]
  submissions      Submission[]
  reviews          Review[]           @relation("Reviewer")
  questionAttempts QuestionAttempt[]
  taskProgress     TaskProgress[]
  invitesCreated   Invite[]           @relation("InviteCreator")
  teacherTrails    TrailTeacher[]     @relation("TeacherTrails")
  trailAccess      StudentTrailAccess[]
  activityDays     UserActivity[]
  notifications    Notification[]
  certificates     Certificate[]
  achievements     UserAchievement[]
  adminTrailAccess AdminTrailAccess[] @relation("AdminTrails")
}

// Track daily user activity (one record per day per user)
model UserActivity {
  id        String   @id @default(cuid())
  userId    String
  date      DateTime @db.Date // Only date part, no time
  actions   Int      @default(1) // Count of actions on this day
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
  @@index([userId])
  @@index([date])
}

// Invite system for registration
model Invite {
  id          String    @id @default(cuid())
  code        String    @unique
  email       String?   // Optional: restrict to specific email
  maxUses     Int       @default(1)
  usedCount   Int       @default(0)
  expiresAt   DateTime?
  createdById String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  createdBy User @relation("InviteCreator", fields: [createdById], references: [id])

  @@index([code])
  @@index([createdById])
}

model Trail {
  id                String   @id @default(cuid())
  slug              String   @unique
  title             String
  subtitle          String
  description       String
  icon              String
  color             String
  duration          String
  order             Int      @default(0)
  isPublished       Boolean  @default(true)
  isRestricted      Boolean  @default(true) // If true, only specific students can access (secure by default)
  teacherVisibility String   @default("ADMIN_ONLY") // ADMIN_ONLY, ALL_TEACHERS, SPECIFIC
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  modules       Module[]
  enrollments   Enrollment[]
  taskProgress  TaskProgress[]
  studentAccess StudentTrailAccess[]
  teachers      TrailTeacher[]
  certificates  Certificate[]
  adminAccess   AdminTrailAccess[]
}

model Module {
  id                 String   @id @default(cuid())
  slug               String   @unique
  title              String
  description        String
  type               String   @default("THEORY") // THEORY, PRACTICE, PROJECT
  level              String   @default("Beginner") // Beginner, Intermediate, Junior, Middle, Senior
  points             Int      @default(50)
  duration           String
  content            String?
  requirements       String?
  requiresSubmission Boolean  @default(false) // If true, students must upload file for review
  order              Int      @default(0)
  trailId            String
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  trail       Trail            @relation(fields: [trailId], references: [id], onDelete: Cascade)
  units       Unit[]
  progress    ModuleProgress[]
  submissions Submission[]
  questions   Question[]

  @@index([trailId])
}

// Assign teachers to specific trails they can review
model TrailTeacher {
  id        String   @id @default(cuid())
  trailId   String
  teacherId String
  createdAt DateTime @default(now())

  trail   Trail @relation(fields: [trailId], references: [id], onDelete: Cascade)
  teacher User  @relation("TeacherTrails", fields: [teacherId], references: [id], onDelete: Cascade)

  @@unique([trailId, teacherId])
  @@index([trailId])
  @@index([teacherId])
}

// Grant specific students access to restricted trails
model StudentTrailAccess {
  id        String   @id @default(cuid())
  studentId String
  trailId   String
  createdAt DateTime @default(now())

  student User  @relation(fields: [studentId], references: [id], onDelete: Cascade)
  trail   Trail @relation(fields: [trailId], references: [id], onDelete: Cascade)

  @@unique([studentId, trailId])
  @@index([studentId])
  @@index([trailId])
}

// Grant specific CO_ADMINs access to specific trails (ADMIN has access to all)
model AdminTrailAccess {
  id        String   @id @default(cuid())
  adminId   String
  trailId   String
  createdAt DateTime @default(now())

  admin User  @relation("AdminTrails", fields: [adminId], references: [id], onDelete: Cascade)
  trail Trail @relation(fields: [trailId], references: [id], onDelete: Cascade)

  @@unique([adminId, trailId])
  @@index([adminId])
  @@index([trailId])
}

model Unit {
  id          String   @id @default(cuid())
  title       String
  content     String
  duration    Int      @default(10)
  points      Int      @default(25)
  isChallenge Boolean  @default(false)
  order       Int      @default(0)
  moduleId    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  module   Module         @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  progress UnitProgress[]

  @@index([moduleId])
}

model Enrollment {
  id        String   @id @default(cuid())
  userId    String
  trailId   String
  createdAt DateTime @default(now())

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  trail Trail @relation(fields: [trailId], references: [id], onDelete: Cascade)

  @@unique([userId, trailId])
  @@index([userId])
  @@index([trailId])
}

model ModuleProgress {
  id               String    @id @default(cuid())
  userId           String
  moduleId         String
  status           String    @default("NOT_STARTED") // NOT_STARTED, IN_PROGRESS, COMPLETED
  startedAt        DateTime?
  completedAt      DateTime?
  hasEarnedXP      Boolean   @default(false) // Prevents earning XP again after reset
  skippedByTeacher Boolean   @default(false) // Teacher marked as skipped
  skippedAt        DateTime? // When it was skipped
  skippedBy        String?   // Teacher who skipped it
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  module Module @relation(fields: [moduleId], references: [id], onDelete: Cascade)

  @@unique([userId, moduleId])
  @@index([userId])
  @@index([moduleId])
}

model UnitProgress {
  id          String    @id @default(cuid())
  userId      String
  unitId      String
  isCompleted Boolean   @default(false)
  completedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  unit Unit @relation(fields: [unitId], references: [id], onDelete: Cascade)

  @@unique([userId, unitId])
  @@index([userId])
  @@index([unitId])
}

model Submission {
  id        String   @id @default(cuid())
  githubUrl String?
  deployUrl String?
  comment   String?
  fileUrl   String?
  status    String   @default("PENDING") // PENDING, APPROVED, REVISION, FAILED
  userId    String
  moduleId  String
  telegramNotifiedAt DateTime? // When TG notification was sent (idempotency)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  module Module   @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  review Review?

  @@index([userId])
  @@index([moduleId])
  @@index([status])
}

model Review {
  id           String   @id @default(cuid())
  score        Int
  criteria     String?
  strengths    String?
  improvements String?
  comment      String?
  submissionId String   @unique
  reviewerId   String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  submission Submission @relation(fields: [submissionId], references: [id], onDelete: Cascade)
  reviewer   User       @relation("Reviewer", fields: [reviewerId], references: [id])

  @@index([reviewerId])
}

// Theory questions for skill assessment
model Question {
  id            String   @id @default(cuid())
  moduleId      String
  type          String   @default("SINGLE_CHOICE") // SINGLE_CHOICE, MATCHING, ORDERING, CASE_ANALYSIS
  question      String
  options       String   // JSON array of options
  correctAnswer Int      @default(0) // Index of correct option (for SINGLE_CHOICE)
  data          String?  // JSON data for complex question types
  order         Int      @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  module   Module            @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  attempts QuestionAttempt[]

  @@index([moduleId])
}

// Track question attempts for scoring (100% -> 65% -> 35%)
model QuestionAttempt {
  id          String   @id @default(cuid())
  userId      String
  questionId  String
  attempts    Int      @default(0)  // Number of attempts
  isCorrect   Boolean  @default(false)
  earnedScore Int      @default(0)  // Score based on attempts
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  question Question @relation(fields: [questionId], references: [id], onDelete: Cascade)

  @@unique([userId, questionId])
  @@index([userId])
  @@index([questionId])
}

// Track candidate's task level progression
model TaskProgress {
  id           String   @id @default(cuid())
  userId       String
  trailId      String
  currentLevel String   @default("MIDDLE")  // JUNIOR, MIDDLE, SENIOR
  middleStatus String   @default("PENDING") // PENDING, PASSED, FAILED
  juniorStatus String   @default("LOCKED")  // LOCKED, PENDING, PASSED, FAILED
  seniorStatus String   @default("LOCKED")  // LOCKED, PENDING, PASSED, FAILED
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  trail Trail @relation(fields: [trailId], references: [id], onDelete: Cascade)

  @@unique([userId, trailId])
  @@index([userId])
  @@index([trailId])
}

// Notifications for users
model Notification {
  id        String   @id @default(cuid())
  userId    String
  type      String   // REVIEW_RECEIVED, MODULE_COMPLETED, etc.
  title     String
  message   String
  link      String?  // URL to navigate to when clicked
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([isRead])
  @@index([createdAt])
}

// Certificates for completed trails
model Certificate {
  id         String   @id @default(cuid())
  userId     String
  trailId    String
  code       String   @unique // Unique verification code
  issuedAt   DateTime @default(now())
  totalXP    Int      // XP earned at time of issue
  level      String   // Level achieved (Junior, Middle, Senior)

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  trail Trail @relation(fields: [trailId], references: [id], onDelete: Cascade)

  @@unique([userId, trailId])
  @@index([userId])
  @@index([trailId])
  @@index([code])
}

// Audit log for tracking changes
model AuditLog {
  id         String   @id @default(cuid())
  userId     String
  userName   String
  action     String   // CREATE, UPDATE, DELETE, REORDER
  entityType String   // TRAIL, MODULE, USER, etc.
  entityId   String
  entityName String
  details    String?  // JSON with additional details
  createdAt  DateTime @default(now())

  @@index([userId])
  @@index([entityType])
  @@index([createdAt])
}

// User achievements/badges
model UserAchievement {
  id            String   @id @default(cuid())
  userId        String
  achievementId String   // FIRST_MODULE, STREAK_7, etc.
  earnedAt      DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, achievementId])
  @@index([userId])
}

// Telegram connection tokens (for secure linking)
model TelegramLinkToken {
  id        String   @id @default(cuid())
  userId    String   @unique // One pending token per user
  token     String   @unique // HMAC-signed token
  expiresAt DateTime // TTL for security
  createdAt DateTime @default(now())

  @@index([token])
  @@index([expiresAt])
}
